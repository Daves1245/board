generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id         String    @id @default(cuid())
  username   String    @unique
  password   String
  firstName  String?
  lastName   String?
  isStaff    Boolean   @default(false)
  isActive   Boolean   @default(true)
  dateJoined DateTime  @default(now())
  accounts   Account[]
  features   Feature[] @relation("FeatureCreator")
  sessions   Session[]
  votes      Vote[]
}

model Feature {
  id                      String    @id @default(cuid())
  title                   String    @db.VarChar(200)
  description             String
  creatorId               String
  parentId                String?
  createdAt               DateTime  @default(now())
  implementedAt           DateTime?
  votes                   Int?
  implementationStartedAt DateTime?
  status                  String    @default("pending")
  creator                 User      @relation("FeatureCreator", fields: [creatorId], references: [id], onDelete: Cascade)
  parent                  Feature?  @relation("FeatureVariations", fields: [parentId], references: [id])
  variations              Feature[] @relation("FeatureVariations")
  voteRecords             Vote[]

  @@index([status])
  @@index([implementedAt])
  @@index([createdAt])
}

model Vote {
  id        String   @id @default(cuid())
  userId    String
  featureId String
  createdAt DateTime @default(now())
  feature   Feature  @relation(fields: [featureId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, featureId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}
